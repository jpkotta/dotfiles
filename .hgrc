# Mercurial config

[ui]
# username to use for commits
# environment variables are expanded
username = $USER@$HOSTNAME

# use emacs as a merge tool, special command line options elsewhere
merge = emacs
# use meld as a merge tool
#merge = meld

# ignore file for all repositories
ignore = ~/.hgignore.global

# do not automatically commit changes in subrepos
commitsubrepos = False

[extensions]
# mercurial queues
# also enables the strip command
mq =

# color output from some commands
color = 

# allows custom URI schemes, like pd:// = ssh://hg@storagez/repos/
schemes = 

# temporarily stash changes without a commit
# hg clone https://bitbucket.org/tksoh/hgshelve ~/.hgext/hgshelve
hgext.hgshelve = ~/.hgext/hgshelve/hgshelve.py

# use mercurial as a git client
# hg clone https://bitbucket.org/durin42/hg-git ~/.hgext/hg-git
# sudo pip install dulwich
hgext.hggit = ~/.hgext/hg-git/hggit

# move changesets to a different (named or unnamed) branch, merging if
# necessary
rebase = 

# use mercurial as a subversion client
# http://bitbucket.org/durin42/hgsubversion/wiki/Home
# requires python-subversion
# recommends rebase extension
hgext.hgsubversion = ~/.hgext/hgsubversion/hgsubversion

# use a pager with long outputs
pager =

# show a progress bar for certain operations that take a long time
progress = 

# remove untracked files
purge = 

# use an external diff tool (diff by default)
extdiff = 

# simple extension to commit by diff hunk
record = 

[alias]
summ = summary --remote

substatus = status --subrepos
subincoming = incoming --subrepos
suboutgoing = outgoing --subrepos
subdiff = diff --subrepos

# shelve extension
shelve = shelve --all
ls = unshelve -l
ll = unshelve -i

# remove all untracked .orig files
rmorig = purge --include=**.orig
rmrej = purge --include=**.rej

REVERT = revert --no-backup

glog = log -G
vlog = log -G -v --pager=yes

bm = bookmarks

[diff]
# use git's diff format, can handle binaries
#git = True

[trusted]
# use sshfs -o idmap=user <remote> <mount-point> to map remote UID to your UID
users = root

[schemes]
pd = ssh://hg@storagez.packetdigital.com/repos/
pdsvn = svn+ssh://kotta@svn.packetdigital.com/zone/subversion/

[merge-tools]
emacs.binary = False
emacs.args = -q --debug-init --eval "(setq ediff-window-setup-function 'ediff-setup-windows-plain) (ediff-merge-with-ancestor \"$local\" \"$other\" \"$base\" nil \"$output\")"
emacs.check = prompt

[tortoisehg]
vdiff = meld
hgtkfork = True

[hgview]
maxfilesize = 10000000

# per-machine settings
%include .hgrc.local

