# Mercurial config

[ui]
# use $HGUSER for username
askusername = False
# use emacs as a merge tool, special command line options elsewhere
merge = emacs
# ignore file for all repositories
ignore = ~/.hgignore.global

[extensions]
# TK gui distributed with mercurial
hgk =

# mercurial queues
mq =

# color output from some commands
color = 

# ASCII art changelog graph
graphlog = 

# allows custom URI schemes, like pd:// = ssh://hg@storagez/repos/
schemes = 

# temporarily stash changes without a commit
# http://mercurial.selenic.com/wiki/ShelveExtension
hgext.hgshelve = ~/.hgext/hgshelve/hgshelve.py

# use mercurial as a git client
# http://hg-git.github.com/
# in mercurial-git package
hgext.git =
bookmarks = 

# use mercurial as a subversion client
# http://bitbucket.org/durin42/hgsubversion/wiki/Home
# requires python-subversion
hgext.hgsubversion = ~/.hgext/hgsubversion/hgsubversion
rebase = 

# localbranches like git
# http://mercurial.selenic.com/wiki/LocalbranchExtension
# http://bitbucket.org/brendan/mercurial-extensions-localbranch
hgext.localbranch = ~/.hgext/localbranch/localbranch.py

# combines pull, update, and merge
fetch = 

# use a pager with long outputs
pager =

# share metadata (.hg/) between multiple working directories
share = 

# show a progress bar for certain operations that take a long time
progress = 

# remove all untracked files
purge = 

# guard against committing FooBar if foobar is already tracked
# http://bitbucket.org/alexandru/caseguard 
hgext.caseguard = ~/.hgext/caseguard/caseguard.py

# easily fix filename case changes
# http://mercurial.selenic.com/wiki/FixcaseExtension
hgext.fixcase = ~/.hgext/fixcase.py

# a replacement for hgk
hgview = 

# transplant changesets from another branch
transplant = 

[alias]
summ = summary --remote
view = hgview

shelve = shelve --all
ls = unshelve -l
ll = unshelve -i

# remove all untracked .orig files
rmorig = purge --include=**.orig
# safety purge (order is important)
PURGE = purge
purge = purge --print

[trusted]
# 754 is packet@storagez
users = root, 754

[schemes]
pd = ssh://hg@storagez.packetdigital.com/repos/
pdsvn = svn+ssh://kotta@svn.packetdigital.com/zone/subversion/

[merge-tools]
emacs.binary = False
emacs.args = -q --debug-init --eval "(ediff-merge-with-ancestor \"$local\" \"$other\" \"$base\" nil \"$output\")"
emacs.check = prompt

[tortoisehg]
vdiff = meld
hgtkfork = True

# per-machine settings
%include .hgrc.local


