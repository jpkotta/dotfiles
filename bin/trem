#!/bin/sh

trem=/usr/games/tremulous
#export SDL_AUDIODRIVER=pulse
#export SDL_AUDIODRIVER=esd
export SDL_AUDIODRIVER=alsa

nvclock -f -F 100

if [ -z $DISPLAY ] ; then 
    startx $trem -- :1 -config xorg.conf.single
else 
    echo "Starting windowed Tremulous"
    $trem +set r_fullScreen 0 
fi

nvclock -f -F 20