#!/bin/bash

doom="/usr/games/doomsday -game jdoom"

case "$1" in 
    ultimate)
        wad=/usr/share/games/doom/doom.wad
        ;;
    II)
        wad=/usr/share/games/doom/doom2.wad
        ;;
    vile)
        wad=/usr/share/games/doom/Vile/Vile.wad
        ;;
    dethwish)
        wad=/usr/share/games/doom/dethwish/dethwish.wad
        ;;
    *)
        echo "Usage: `basename $0` {ultimate|II|vile|dethwish}"
        exit 1
        ;;
esac

if [[ -z $DISPLAY ]] ; then
    startx $doom -file $wad -- :1
else
    $doom -file $wad
fi
